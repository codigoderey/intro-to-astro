---
export interface Props {
  titulo: string,
  subtitulo:  string
}

const {titulo, subtitulo} = Astro.props
---
<header>
  <h1>{titulo}</h1>
  <h2>{subtitulo}</h2>
</header>

<style>
  header{
    width: 100%;
    height: 40vh;
    background-color: brown;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-transform: uppercase;
    color: #fff;
  }
</style>